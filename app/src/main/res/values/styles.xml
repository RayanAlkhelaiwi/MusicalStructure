<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Style set for the playing control buttons-->
    <style name="playingStyleControlButtons">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">430dp</item>
    </style>

    <!--Style set for the timing of the seek-bar-->
    <style name="timingSeekBarStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_below">@+id/albumImage</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
