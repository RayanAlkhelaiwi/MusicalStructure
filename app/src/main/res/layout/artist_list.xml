<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.rayanalkhelaiwi.musicalstructure.ArtistList">

    <!--Beginning of the 3 ImageViews at the top-->
    <ImageView
        android:id="@+id/songsListAL"
        style="@style/barTransitionButtons"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:src="@drawable/songslist" />

    <ImageView
        android:id="@+id/playingAL"
        style="@style/barTransitionButtons"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:src="@drawable/playing" />

    <ImageView
        android:id="@+id/paymentAL"
        style="@style/barTransitionButtons"
        android:layout_centerHorizontal="true"
        android:src="@drawable/payment" />
    <!--End of the 3 ImageViews at the top-->

    <!--Default Icon for the artist's album-->
    <ImageView
        android:id="@+id/artistListPic1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="140dp"
        android:src="@drawable/artistlist" />

    <!--Name of the Artist-->
    <TextView
        style="@style/songsArtistsPaymentDetails"
        android:layout_width="128dp"
        android:layout_below="@id/artistListPic1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:text="@string/artist1"
        android:textAlignment="center"
        android:textStyle="bold" />

