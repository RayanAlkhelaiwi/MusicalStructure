<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.rayanalkhelaiwi.musicalstructure.SongsList">

    <ImageView
        android:id="@+id/playingSL"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        style="@style/barTransitionButtons"
        android:src="@drawable/playing" />

    <ImageView
        android:id="@+id/artistListSL"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        style="@style/barTransitionButtons"
        android:src="@drawable/artistlist"/>

    <ImageView
        android:id="@+id/paymentSL"
        android:layout_centerHorizontal="true"
        style="@style/barTransitionButtons"
        android:src="@drawable/payment"/>

    <ImageView
        android:id="@+id/songListPic1"
        style="@style/songsPics"
        android:layout_marginTop="120dp"/>

    <TextView
        style="@style/songsArtistsPaymentDetails"
        android:layout_alignTop="@id/songListPic1"
        android:layout_toEndOf="@id/songListPic1"
        android:textStyle="bold"
        android:text="@string/artist1"/>

    <TextView
        style="@style/songsArtistsPaymentDetails"
        android:layout_alignBottom="@id/songListPic1"
        android:layout_toEndOf="@id/songListPic1"
        android:text="@string/song1"/>

    <ImageView
        android:id="@+id/songListPic2"
